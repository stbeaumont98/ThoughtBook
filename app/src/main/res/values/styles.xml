<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar"
            tools:targetApi="27">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="shapeAppearanceLargeComponent">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/comfortaab</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius</item>
    </style>

    <style name="CustomDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dialog_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/dialog_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/dialog_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/dialog_corner_radius</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

</resources>
